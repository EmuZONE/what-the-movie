            <onleft>3000</onleft>
            <onright>3000</onright>
            <onup>3000</onup>
            <ondown>3000</ondown>
            <itemlayout width="42" height="32">
                <control type="image">
                    <description>The Flag if visible</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>32</width>
                    <height>32</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <visible>!ListItem.property(unavailable)</visible>
                </control>
                <control type="image">
                    <description>The Flag if unvisible</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>32</width>
                    <height>32</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <colordiffuse>11FFFFFF</colordiffuse>
                    <visible>ListItem.property(unavailable)</visible>
