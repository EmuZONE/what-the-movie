                <description>The Picture to guess</description>
                <posx>15</posx>
                <posy>5</posy>
                <width>720</width>
                <height>400</height>
                <fadetime>500</fadetime>
                <texture>$INFO[Window(10000).Property(wtm.main_image)]</texture>
                <animation effect="zoom" end="177,177" center="auto" time="500" tween="circle" easing="inout" condition="Control.HasFocus(3003)">Conditional</animation>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="image" id="1006">
                <description>Solution background image</description>
                <posx>15</posx>
                <posy>375</posy>
                <width>720</width>
                <height>30</height>
                <texture>solution_back.png</texture>
                <visible>Control.IsVisible(1007)</visible>
                <animation effect="fade" time="200">VisibleChange</animation>
            </control>
            <control type="label" id="1007">
                <description>Solution movie title and year</description>
                <posx>25</posx>
                <posy>375</posy>
                <width>720</width>
                <height>30</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>font12</font>
                <scroll>true</scroll>
                <textcolor>FF000000</textcolor>
                <visible>!StringCompare(Window(10000).Property(wtm.solved_status),inactive) + !StringCompare(Window(10000).Property(wtm.solved_status),) + !StringCompare(Window(10000).Property(wtm.solved_status),loading)</visible>
                <animation effect="fade" time="200">VisibleChange</animation>
            </control>
